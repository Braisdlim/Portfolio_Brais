<script>
  // Extiende la interfaz Window para TypeScript
  // @ts-ignore
  declare global {
    interface Window {
      openCvModal: () => void;
      closeCvModal: () => void;
    }
  }

  // Funciones para el modal de CV
  function openCvModal() {
    const modal = document.getElementById('cv-modal');
    if (modal) {
      modal.classList.add('show');
      modal.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
      
      // Focus en el primer botón
      setTimeout(() => {
        const firstBtn = modal.querySelector('.cv-modal-btn');
        if (firstBtn) (firstBtn as HTMLElement).focus();
      }, 100);
    }
  }

  function closeCvModal() {
    const modal = document.getElementById('cv-modal');
    if (modal) {
      modal.classList.remove('show');
      modal.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }
  }

  // Cerrar modal con Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeCvModal();
    }
  });

  // Hacer las funciones globales
  window.openCvModal = openCvModal;
  window.closeCvModal = closeCvModal;
</script>

