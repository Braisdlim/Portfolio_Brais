---
// Hero Section Component
---

<section id="inicio" class="hero">
  <!-- Efectos de fondo -->
  <div class="hero-bg"></div>
  
  <div class="hero-content">
    <div class="fade-in">
      <!-- Foto de perfil -->
      <div class="profile-section">
        <div class="profile-image">
          <div class="image-placeholder">
            <img src="/images/profile.jpg" alt="Brais - Desarrollador Full Stack" class="profile-photo" />
          </div>
        </div>
        
        <!-- Breve descripción personal -->
        <div class="profile-intro">
          <div class="hero-main-block">
            <span class="hero-greeting" data-translate="hero-greeting">Hola, soy Brais</span>
            <span class="hero-role-line">
              <span class="hero-role" data-translate="hero-role">Ingeniero Informático</span>
              <span class="hero-desc" data-translate="hero-location">desde Galicia, España</span>
              <span class="hero-desc" data-translate="hero-formation">Formado dentro y fuera del aula para ser</span>
              <span class="hero-fullstack hero-fancy" style="margin-left:0;" data-translate="hero-title">Desarrollador Full Stack</span>
            </span>
          </div>
        </div>
      </div>

      <!-- Título/Rol principal -->
      <!-- Título/Rol principal y descripción técnica suprimidos para dar protagonismo al bloque principal -->
      
      <!-- Botones de acción -->
      <div class="cta-buttons">
        <a href="#proyectos" class="btn btn-primary" data-translate="hero-cta">Ver mi trabajo</a>
        <a href="#contacto" class="btn btn-outline" data-translate="hero-contact">Contactar</a>
      </div>
      
      <!-- Enlaces sociales -->
      <div class="social-links">
        <a href="https://github.com/Braisdlim" class="social-link" aria-label="GitHub" target="_blank" rel="noopener noreferrer">
          <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
