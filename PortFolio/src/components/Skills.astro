---
// Skills Section Component
---

<section id="habilidades" class="skills">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">
        <span class="title-gradient" data-translate="skills-title">Habilidades</span>
      </h2>
      <p class="section-description" data-translate="skills-description">
        Tecnologías y herramientas que domino para crear soluciones innovadoras
      </p>
    </div>
    
    <div class="skills-grid">
      <!-- Lenguajes de Programación -->
      <div class="skill-category">
        <h3 class="category-title">
          <svg class="category-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
          <span data-translate="programming-languages">Lenguajes de Programación</span>
        </h3>
        <div class="skills-list">
          <div class="skill-item">
            <div class="skill-icon python">
              <i class="devicon-python-plain"></i>
            </div>
            <span class="skill-name">Python</span>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon java">
              <i class="devicon-java-plain"></i>
            </div>
            <span class="skill-name">Java</span>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon c">
              <i class="devicon-c-plain"></i>
            </div>
            <span class="skill-name">C</span>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon cpp">
              <i class="devicon-cplusplus-plain"></i>
            </div>
            <span class="skill-name">C++</span>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon csharp">
              <i class="devicon-csharp-plain"></i>
            </div>
            <span class="skill-name">C#</span>
          </div>
        </div>
      </div>

      <!-- Desarrollo Web -->
      <div class="skill-category">
        <h3 class="category-title">
          <svg class="category-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
          </svg>
          <span data-translate="web-development">Desarrollo Web</span>
        </h3>
        <div class="skills-list">
          <div class="skill-item">
            <div class="skill-icon html">
              <i class="devicon-html5-plain"></i>
            </div>
            <span class="skill-name">HTML</span>
          </div>
          <div class="skill-item">
            <div class="skill-icon css">
              <i class="devicon-css3-plain"></i>
            </div>
            <span class="skill-name">CSS</span>
          </div>
          <div class="skill-item">
            <div class="skill-icon javascript">
              <i class="devicon-javascript-plain"></i>
            </div>
            <span class="skill-name">JavaScript</span>
          </div>
          <div class="skill-item">
            <div class="skill-icon astro">
              <i class="devicon-astro-plain"></i>
            </div>
            <span class="skill-name">Astro</span>
          </div>
        </div>
      </div>

      <!-- Bases de Datos -->
      <div class="skill-category">
        <h3 class="category-title">
          <svg class="category-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
          </svg>
          <span data-translate="databases">Bases de Datos</span>
        </h3>
        <div class="skills-list">
          <div class="skill-item">
            <div class="skill-icon mysql">
              <i class="devicon-mysql-plain"></i>
            </div>
            <span class="skill-name">MySQL</span>
          </div>
        </div>
      </div>

      <!-- Sistemas de Administración -->
      <div class="skill-category">
        <h3 class="category-title">
          <svg class="category-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2a4 4 0 018 0v2M9 17H7a2 2 0 01-2-2v-5a2 2 0 012-2h10a2 2 0 012 2v5a2 2 0 01-2 2h-2M9 17v2a2 2 0 002 2h2a2 2 0 002-2v-2" />
          </svg>
          <span data-translate="administration-systems">Sistemas de Administración</span>
        </h3>
        <div class="skills-list">
          <div class="skill-item">
            <div class="skill-icon linux">
              <i class="devicon-linux-plain"></i>
            </div>
            <span class="skill-name">Linux</span>
          </div>
          <div class="skill-item">
            <div class="skill-icon bash">
              <i class="devicon-bash-plain"></i>
            </div>
            <span class="skill-name">Shell Scripting</span>
          </div>
        </div>
      </div>

      <!-- Herramientas de Desarrollo -->
      <div class="skill-category">
        <h3 class="category-title">
          <svg class="category-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span data-translate="development-tools">Herramientas de Desarrollo</span>
        </h3>
        <div class="skills-list">
          <div class="skill-item">
            <div class="skill-icon git">
              <i class="devicon-git-plain"></i>
            </div>
            <span class="skill-name">Git</span>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon github">
              <i class="devicon-github-original"></i>
            </div>
            <span class="skill-name">GitHub</span>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon vscode">
              <i class="devicon-vscode-plain"></i>
            </div>
            <span class="skill-name">VS Code</span>
          </div>
          
          <div class="skill-item">
            <div class="skill-icon nodejs">
              <i class="devicon-nodejs-plain"></i>
            </div>
            <span class="skill-name">Node.js</span>
          </div>
        </div>
      </div>

      <!-- Aprendiendo -->
      <div class="skill-category learning">
        <h3 class="category-title">
          <svg class="category-icon" width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span data-translate="learning">En Aprendizaje</span>
        </h3>
        <div class="skills-list">
          <div class="skill-item learning-item">
            <div class="skill-icon react">
              <i class="devicon-react-original"></i>
            </div>
            <span class="skill-name">React</span>
            <div class="learning-badge" data-translate="learning-badge">Aprendiendo</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .skills {
    padding: 6rem 0;
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 50%, var(--bg-primary) 100%);
    position: relative;
    overflow: hidden;
  }
  
  .skills::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 20%, rgba(0, 245, 255, 0.08) 0%, transparent 35%),
      radial-gradient(circle at 80% 80%, rgba(217, 70, 239, 0.06) 0%, transparent 35%),
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 50px,
        rgba(255, 255, 255, 0.01) 50px,
        rgba(255, 255, 255, 0.01) 52px
      );
    pointer-events: none;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    position: relative;
    z-index: 10;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }
  
  .section-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .title-gradient {
    background: linear-gradient(135deg, var(--accent-cyan), var(--accent-purple), var(--accent-green));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradientShift 4s ease-in-out infinite;
  }
  
  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  .section-description {
    color: var(--text-muted);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    align-items: stretch;
  }
  
  .skill-category {
    background: rgba(26, 26, 26, 0.8);
    border: 1px solid rgba(160, 160, 160, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    min-height: 460px;
    display: flex;
    flex-direction: column;
  }
  
  .skill-category:hover {
    border-color: var(--accent-cyan);
    box-shadow: 0 10px 30px rgba(0, 245, 255, 0.1);
    transform: translateY(-5px);
  }
  
  .skill-category.learning {
    border-color: var(--accent-orange);
  }
  
  .skill-category.learning:hover {
    border-color: var(--accent-orange);
    box-shadow: 0 10px 30px rgba(255, 165, 0, 0.1);
  }
  
  .category-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-primary);
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }
  
  .category-icon {
    color: var(--accent-cyan);
  }
  
  .learning .category-icon {
    color: var(--accent-orange);
  }
  
  .skills-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1rem;
    flex: 1;
    align-content: start;
  }
  
  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 0.75rem;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(160, 160, 160, 0.1);
    transition: all 0.3s ease;
    position: relative;
  }
  
  .skill-item:hover {
    border-color: var(--accent-cyan);
    background: rgba(0, 245, 255, 0.05);
    transform: translateY(-3px);
  }
  
  .learning-item:hover {
    border-color: var(--accent-orange);
    background: rgba(255, 165, 0, 0.05);
  }
  
  .skill-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    font-size: 2rem;
  }
  
  .skill-icon i {
    font-size: 2rem;
    transition: all 0.3s ease;
  }
  
  .skill-icon.python i { color: #3776ab; }
  .skill-icon.java i { color: #ed8b00; }
  .skill-icon.c i { color: #00599c; }
  .skill-icon.cpp i { color: #00599c; }
  .skill-icon.csharp i { color: #239120; }
  .skill-icon.html i { color: #e34f26; }
  .skill-icon.css i { color: #1572b6; }
  .skill-icon.bootstrap i { color: #7952b3; }
  .skill-icon.javascript i { color: #f7df1e; }
  .skill-icon.mysql i { color: #4479a1; }
  .skill-icon.git i { color: #f05032; }
  .skill-icon.github i { color: var(--text-primary); }
  .skill-icon.vscode i { color: #007acc; }
  .skill-icon.react i { color: #61dafb; }
  .skill-icon.nodejs i { color: #339933; }
  
  .skill-letter {
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--accent-cyan);
  }
  
  .skill-name {
    color: var(--text-secondary);
    font-size: 0.875rem;
    font-weight: 500;
    text-align: center;
  }
  
  .learning-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    background: var(--accent-orange);
    color: var(--bg-primary);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 1rem;
    border: 2px solid var(--bg-primary);
  }
  
  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .skills-list {
      grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
      gap: 0.75rem;
    }
    
    .section-title {
      font-size: 2.5rem;
    }
    
    .skill-category {
      padding: 1.5rem;
    }
  }

  /* Estilos completos para modo claro */
  html.light-mode .skills {
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--surface) 50%, var(--bg-secondary) 100%);
    position: relative;
    overflow: hidden;
  }

  html.light-mode .skills::before {
    background-image: 
      radial-gradient(circle at 20% 20%, rgba(37, 99, 235, 0.06) 0%, transparent 40%),
      radial-gradient(circle at 80% 80%, rgba(124, 58, 237, 0.05) 0%, transparent 40%),
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 60px,
        rgba(37, 99, 235, 0.02) 60px,
        rgba(37, 99, 235, 0.02) 62px
      );
  }

  html.light-mode .title-gradient {
    background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple), var(--accent-cyan));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 900;
  }

  html.light-mode .section-description {
    color: var(--text-muted);
    font-weight: 500;
  }

  html.light-mode .skill-category {
    background: #475569;
    border: 2px solid #334155;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    position: relative;
    overflow: hidden;
  }

  html.light-mode .skill-category::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--accent-blue), var(--accent-purple));
  }

  html.light-mode .skill-category:hover {
    border-color: var(--accent-blue);
    box-shadow: var(--shadow-strong);
    transform: translateY(-8px);
  }

  html.light-mode .skill-category.learning::before {
    background: linear-gradient(90deg, var(--accent-orange), var(--accent-pink));
  }

  html.light-mode .skill-category.learning:hover {
    border-color: var(--accent-orange);
    box-shadow: 0 16px 48px rgba(234, 88, 12, 0.25);
  }

  html.light-mode .category-title {
    color: #f8fafc;
    font-weight: 700;
  }

  html.light-mode .category-icon {
    color: #00f5ff;
  }

  html.light-mode .learning .category-icon {
    color: #f97316;
  }

  html.light-mode .skill-item {
    background: #e2e8f0;
    border: 2px solid #cbd5e1;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  html.light-mode .skill-item:hover {
    border-color: #00f5ff;
    background: #f8fafc;
    box-shadow: 0 8px 32px rgba(0, 245, 255, 0.25);
    transform: translateY(-4px) scale(1.05);
  }

  html.light-mode .learning-item:hover {
    border-color: #f97316;
    background: #f8fafc;
    box-shadow: 0 8px 24px rgba(234, 88, 12, 0.2);
  }

  html.light-mode .skill-letter {
    color: var(--accent-blue);
    font-weight: 900;
  }

  html.light-mode .skill-name {
    color: var(--text-secondary);
    font-weight: 600;
  }

  html.light-mode .learning-badge {
    background: var(--accent-orange);
    color: var(--text-contrast);
    border: 2px solid var(--surface);
    box-shadow: var(--shadow-light);
  }
</style>
