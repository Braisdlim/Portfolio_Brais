      this.carouselId = carouselId;
      this.track = document.getElementById(`carousel-track-${carouselId}`);
      this.slides = this.track ? this.track.querySelectorAll('.carousel-slide') : document.createDocumentFragment().childNodes as NodeListOf<HTMLElement>;
      this.indicators = document.querySelectorAll(`[data-carousel="${carouselId}"] .indicator`);
      this.prevBtn = document.querySelector(`[data-carousel="${carouselId}"][data-direction="prev"]`);
      this.nextBtn = document.querySelector(`[data-carousel="${carouselId}"][data-direction="next"]`);
      this.currentSlide = 0;
      
      this.init();
    }

    init() {
      if (this.slides.length === 0) return;
      
      // Event listeners para botones de navegación
      this.prevBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        this.prevSlide();
      });
      
      this.nextBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        this.nextSlide();
      });
      
      // Event listeners para indicadores
      this.indicators.forEach((indicator, index) => {
        indicator.addEventListener('click', (e) => {
          e.preventDefault();
          this.goToSlide(index);
        });
      });
      
      // Auto-play opcional (comentado por defecto)
      // this.startAutoPlay();
    }

    updateSlide() {
      // Actualizar slides
      this.slides.forEach((slide, index) => {
        if (index === this.currentSlide) {
          slide.classList.add('active');
        } else {
          slide.classList.remove('active');
        }
      });
      
      // Actualizar indicadores
      this.indicators.forEach((indicator, index) => {
        if (index === this.currentSlide) {
          indicator.classList.add('active');
        } else {
          indicator.classList.remove('active');
        }
      });
    }

    nextSlide() {
      this.currentSlide = (this.currentSlide + 1) % this.slides.length;
      this.updateSlide();
    }

    prevSlide() {
      this.currentSlide = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
      this.updateSlide();
    }

    goToSlide(index: number) {
      this.currentSlide = index;
      this.updateSlide();
    }

    startAutoPlay(interval = 4000) {
      this.autoPlayInterval = setInterval(() => {
        this.nextSlide();
      }, interval);
    }

    stopAutoPlay() {
      if (this.autoPlayInterval) {
        clearInterval(this.autoPlayInterval);
      }
    }
  }

  // Inicializar carousels cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    // Inicializar carousel del proyecto 1
    new ProjectCarousel(1);
    
    // Inicializar carousel del proyecto 2
    new ProjectCarousel(2);
    
    // Añadir más carousels aquí si necesitas más proyectos
    // new ProjectCarousel(3);

    // Funcionalidad del Modal
    const modal = document.getElementById('project-modal');
    const modalTriggers = document.querySelectorAll('[data-modal-trigger]');
    const modalClose = document.querySelectorAll('.modal-close, .modal-close-btn');
    const modalBackdrop = document.querySelector('.modal-backdrop');
    const modalGithubLink = document.getElementById('modal-github-link');

    // URLs de GitHub por proyecto
    const githubUrls: { [key: string]: string } = {
      'spinventory': 'https://github.com/Braisdlim/Spinventory',
      'multithreadedencryption': '#' // Cambiar por la URL real cuando esté disponible
      // Agregar más proyectos aquí: 'proyecto-nombre': 'url-github'
    };

    // Abrir modal
    modalTriggers.forEach(trigger => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        const projectKey = trigger.getAttribute('data-modal-trigger');
        
        // Actualizar enlace de GitHub
        if (projectKey && githubUrls[projectKey]) {
          if (modalGithubLink) {
            (modalGithubLink as HTMLAnchorElement).href = githubUrls[projectKey];
          }
        }
        
        if (modal) {
          modal.classList.add('active');
          modal.setAttribute('aria-hidden', 'false');
        }
        document.body.style.overflow = 'hidden';
      });
    });

    // Cerrar modal
    const closeModal = () => {
      if (modal) {
        modal.classList.remove('active');
        modal.setAttribute('aria-hidden', 'true');
      }
      document.body.style.overflow = '';
    };

    modalClose.forEach(closeBtn => {
      closeBtn.addEventListener('click', closeModal);
    });

    if (modalBackdrop) {
      modalBackdrop.addEventListener('click', closeModal);
    }

    // Cerrar con ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal && modal.classList.contains('active')) {
        closeModal();
      }
    });
  });
