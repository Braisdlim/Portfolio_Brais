  // Diccionario de traducciones ES/EN
  const translations = {
    'inicio': { es: 'Inicio', en: 'Home' },
    'sobre-mi': { es: 'Sobre mí', en: 'About me' },
    'educacion': { es: 'Educación', en: 'Education' },
    'proyectos': { es: 'Proyectos', en: 'Projects' },
    'habilidades': { es: 'Habilidades', en: 'Skills' },
    'contacto': { es: 'Contacto', en: 'Contact' },
    'download-cv': { es: 'Descargar CV', en: 'Download CV' },
    // Añade aquí más claves si tienes más textos traducibles
  };

  // Función para actualizar todos los textos traducibles
  function updateTranslations() {
    document.querySelectorAll('[data-translate]').forEach(el => {
      const key = el.getAttribute('data-translate');
      if (translations[key] && translations[key][lang]) {
        el.textContent = translations[key][lang];
      }
    });
  }

  // Botón de idioma simple, visible y funcional
  const langSwitchSimple = document.getElementById('langSwitchSimple');
  const langSwitchSimpleLabel = document.getElementById('langSwitchSimpleLabel');
  let lang = localStorage.getItem('lang') || 'es';
  function updateLangBtn() {
    if (langSwitchSimpleLabel) langSwitchSimpleLabel.textContent = lang.toUpperCase();
  }

  // Sincroniza idioma al cargar
  updateLangBtn();
  updateTranslations();

  if (langSwitchSimple) {
    langSwitchSimple.addEventListener('click', () => {
      console.log('[LANG] Click detectado');
      langSwitchSimple.style.borderColor = 'blue';
      setTimeout(() => { langSwitchSimple.style.borderColor = '#00f5ff'; }, 500);
      lang = lang === 'es' ? 'en' : 'es';
      localStorage.setItem('lang', lang);
      updateLangBtn();
      updateTranslations();
    });
  } else {
    console.error('[LANG] Botón no encontrado en el DOM');
  }

  // --- Animación de sección activa en menú de navegación (robusta) ---
function getSectionElements() {
  const navLinks = document.querySelectorAll('.nav-link[href^="#"]');
  const sectionIds = Array.from(navLinks).map(link => link.getAttribute('href').replace('#', ''));
  const sections = sectionIds.map(id => document.getElementById(id));
  return { navLinks, sections };
}

function onScrollHighlightSection() {
  const { navLinks, sections } = getSectionElements();
  let scrollPos = window.scrollY || window.pageYOffset;
  let offset = document.querySelector('.header')?.offsetHeight || 80;
  let found = false;
  for (let i = sections.length - 1; i >= 0; i--) {
    const section = sections[i];
    if (section && (section.offsetTop - offset - 1) <= scrollPos) {
      navLinks.forEach(link => link.classList.remove('active-section'));
      navLinks[i].classList.add('active-section');
      found = true;
      break;
    }
  }
  if (!found) {
    navLinks.forEach(link => link.classList.remove('active-section'));
  }
}
window.addEventListener('scroll', onScrollHighlightSection, { passive: true });
window.addEventListener('resize', onScrollHighlightSection);
document.addEventListener('DOMContentLoaded', onScrollHighlightSection);
</script>



